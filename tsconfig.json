{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "./dist/"
  },
  "include": [
    "src/**/*",
    "package.json"
  ],
  "$schema": "https://json.schemastore.org/tsconfig"
}
